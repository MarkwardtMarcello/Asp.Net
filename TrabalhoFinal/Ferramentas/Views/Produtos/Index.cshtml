@model IEnumerable<BaseModels.Produto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diametro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Matricula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diametro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProdutoID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ProdutoID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.ProdutoID })
        </td>
    </tr>
}

</table>
